
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Fodboldsystem</title>
    <link rel="stylesheet" type="text/css" href="../../fonts/style.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar-fixed-top" id="navb">
        <!-- Top right corner, used to show the username and give the user the option to log out-->
        <div class="loginInformation"id="usernameInformation">
            @if (Session["userID"] != null)
            {
                @Session["userName"].ToString()
                <a href="@Url.Action("LogOut","Login")"><span class="glyphicon glyphicon-log-out"></span></a>
            }
        </div>
        <a href="@Url.Action("Index","Home")">
            <h1 id="title"> Fodboldsystem <span class="glyphicon glyphicon-home" style="zoom:0.8;"></span></h1>
        </a>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@model Bordfodbold_System.Entities.Player
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Login</title>
        <style>
            /* Edit later to center */
            #login-div {
                position: absolute;
                left: 40%;
                top: 40%;
                border: 1px solid #ccc;
                padding: 10px 10px;
            }
        </style>
    </head>
<body>
<div id="login-div">
    @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
    {
        <table>
            <tr>
                <td></td>
                <td style="text-decoration: underline">Fodbold system</td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.name)
                </td>
                <td>
                    @Html.EditorFor(model => model.name)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.ValidationMessageFor(model => model.name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.password)
                </td>
                <td>
                    @Html.EditorFor(model => model.password)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" name="name" value="Login" />
                    <input type="reset" name="name" value="Clear" />
                </td>
            </tr>
        </table>
    }
</div>
</body>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</html>
